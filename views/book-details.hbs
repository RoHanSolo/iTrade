<!DOCTYPE html>
<html lang="en" class="no-js">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="description" content="">
	<meta name="keywords" content="">
	<meta name="author" content="RAK">
	<title>iTrade - Book Trading System</title>
	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Oswald:400,300,700,900" rel="stylesheet" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">
	<!-- Styles -->
	<link rel="stylesheet" href="/assets/css/bootstrap.min.css">
	<link rel="stylesheet" href="/assets/pe-icon-7-stroke/css/pe-icon-7.css">
	<link rel="stylesheet" href="/assets/font-awesome-4.3.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="/assets/css/animate.min.css">
	<link rel="stylesheet" href="/assets/css/animations.css">
	<link rel="stylesheet" href="/assets/css/owl.carousel.css">
	<link rel="stylesheet" href="/assets/css/bootsnipp.min.css">
	<link rel="stylesheet" href="/assets/css/theme-orange.css">
	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

	<!--  Js -->
	<script src="/assets/js/modernizr.custom.js"></script>
	<script src="/assets/js/jquery-2.1.3.min.js"></script>
</head>

<body>

	<!-- PRELOADER -->
	<div class="preloader">
		<div class="spinner">
			<div class="dot1"></div>
			<div class="dot2"></div>
		</div>
	</div>
	<!-- end: PRELOADER  -->


	<div class="background-blur" style="background-image: url('/assets/img/bg/login.jpg');"></div>


	<!-- NAVIGATION -->
	<nav>
		<!-- Logo -->
		<div class="logo-box">
			<a class="logo logo-img" href="/">
                    <img src="/assets/img/logo-text.png" class="img-responsive" alt="iTrade">
                </a>
		</div>

		<!-- Menu button mobile -->
		<button type="button" aria-label="Toggle Navigation" class="menu-button-mobile lines-button x2">
            <span class="lines"></span>
        </button>

		<!-- Menu -->
		<div class="menu-box my-scrollbar">
			<div id="dl-menu" class="dl-menuwrapper">
				<ul class="dl-menu dl-menuopen menu-left">
					<li><a class="page-link" id="nav-available" href="/#available" data-hover="available books">available books</a></li>
					<li><a class="page-link" id="nav-request" href="/#request" data-hover="requested books">requested books</a></li>
					<li><a class="page-link" id="nav-books" href="/#books" data-hover="my books">my books</a></li>
					<li><a class="page-link" id="nav-statistics" href="/#statistics" data-hover="book statistics">book statistics</a></li>
					<li><a class="page-link" id="nav-upload" href="/#upload" data-hover="upload book">upload book</a></li>
					<li id="myprofile"><a class="page-link" id="nav-profile" href="/#profile" data-hover="edit profile">edit profile</a></li>
					<li><a id="nav-logout" href="/users/logout" data-hover="log out">log out</a></li>
				</ul>
			</div>
		</div>
		<footer class="footer">
			<a class="page-link" href="/#profile" id="foot">
                <button class="btn btn-block"><span style="text-transform: capitalize">Hello, </span>
                {{#if name}}
                    {{name}}
                {{/if}}

                {{#else}}
                    Undefined User
                {{/else}}
                </button>
            </a>
		</footer>
	</nav>
	<!-- end: NAVIGATION -->


	<!-- PAGE-WRAPPER -->
	<div class="page-wrapper">


		<div class="page-ajax-preloader">
			<i class="fa fa-refresh fa-spin"></i>
			<span>Loading...</span>
		</div>

		<!-- Blog-post Section -->
		<section id="blog" class="page-activ">
			<div class="content">

				<a href="/#books" class="ajax-page-link btn btn-prev">
                        <i class="fa fa-long-arrow-left"></i>
                    </a>

				<div class="blog-post">


					<div class="post-bg">
						<img src="{{thumbnail}}" class="img-responsive" alt="Image">
					</div>

					<div class="container-fluid">
						<div class="row">
							<div class="col-md-10 col-md-offset-1 post-content">

								<h2 style="color: black">{{bookname}}
									<span class="pull-right">
										<button class="btn btn-default"><i class="fa fa-pencil-square-o"></i> Edit thumbnail</button>
									</span>
								</h2>

								<div id="genres" class="post-category">
								</div>

								<div class="post-caption">
									<span class="autor"><i class="fa fa-fw fa-user"></i> No. of requests: {{reqnum}}</span>
								</div>
								<!-- .post-caption -->


								<div class="post-comments">
									<div class="page-header">
										<h3>Requests</h3>
									</div>

									<div id="requests">
									</div>
									<!-- .media -->
								</div>


								<div class="post-navigation text-center">
									<a class="ajax-loader btn btn-link" href="#">
                                                <i class="fa fa-long-arrow-left ico-left"></i> 
                                                <span class="hidden-xs text-uppercase"> prev book</span>
                                            </a>
									<a class="page-link btn btn-link" href="/#books">
                                                <i class="fa fa-th"></i>
                                            </a>
									<a class="ajax-loader btn btn-link" href="#">
                                                <span class="hidden-xs text-uppercase">next book </span>
                                                <i class="fa fa-long-arrow-right ico-right"></i>
                                            </a>
								</div>
								<!-- .post-navigation -->

								<div class="space50"></div>

							</div>
							<!-- .col-lg-10 -->
						</div>
						<!-- .row -->
					</div>
					<!-- .container-fluid -->


				</div>
				<!-- .blog-post -->

			</div>
			<!-- .content -->
		</section>
		<!-- end: Blog-post Section -->

	</div>
	<!-- end: PAGE-WRAPPER -->

	<div id="mybook" class="hidden">{{bookid}}</div>
	<div id="bookgenres" class="hidden">{{genres}}</div>
	<div id="requsers" class="hidden">{{requsers}}</div>
	<div id="userbooks" class="hidden">{{userbooks}}</div>


	<!-- PLUGIN SCRIPTS -->
	<script src="/assets/js/book-details.js"></script>
	<script src="/assets/js/bootstrap.min.js"></script>
	<script src="/assets/js/imagesloaded.pkgd.min.js"></script>
	<script src="/assets/js/masonry.pkgd.min.js"></script>
	<script src="/assets/js/jquery.backstretch.min.js"></script>
	<script src="/assets/js/jquery.stellar.min.js"></script>
	<script src="/assets/js/owl.carousel.min.js"></script>
	<script src="/assets/js/jquery.shuffle.min.js"></script>
	<script src="/assets/js/jquery.hoverdir.js"></script>
	<script src="/assets/js/jquery.lazy.min.js"></script>
	<script src="/assets/js/functions.js"></script>
	<script src="/assets/js/custom.js"></script>


</body>

</html>
